		</fileset>
	</path>
	<path id="project.gwt.classpath">
		<pathelement path="${project.gwt.classpath.src}" />
		<pathelement path="${project.gwt.classpath.bin}" />
		<pathelement path="${project.gwt.classpath.lib}" />
