<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<servlet>
		<servlet-name>AlcinaTemplateGwtRpc</servlet-name>
		<servlet-class>cc.alcina.template.servlet.AlcinaTemplateRemoteServiceImpl 
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AlcinaTemplateAppStartupServlet</servlet-name>
		<servlet-class>cc.alcina.template.servlet.AlcinaTemplateAppLifecycleServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>AlcinaTemplateGwtRpc</servlet-name>
		<url-pattern>/alcinaTemplateService.do</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>ResponseHeaderFilter</filter-name>
		<filter-class>cc.alcina.framework.servlet.servlet.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=86400</param-value>
		</init-param>
	</filter>
	<servlet>
		<servlet-name>AppCacheManifest</servlet-name>
		<servlet-class>cc.alcina.framework.servlet.servlet.ApplicationCacheManifestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppCacheManifest</servlet-name>
		<url-pattern>*.manifest</url-pattern>
	</servlet-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>*.png</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>*.gif</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>*.jpeg</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>NoCacheResponseHeaderFilter</filter-name>
		<filter-class>cc.alcina.framework.servlet.servlet.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>private,no-cache,no-store</param-value>
		</init-param>
		<init-param>
			<param-name>Pragma</param-name>
			<param-value>no-cache</param-value>
		</init-param>
		<init-param>
			<param-name>expires</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>Url-Regex</param-name>
			<param-value>.+\.nocache\..+</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>NoCacheResponseHeaderFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>EternalCacheResponseHeaderFilter</filter-name>
		<filter-class>cc.alcina.framework.servlet.servlet.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=8640000</param-value>
		</init-param>
		<init-param>
			<param-name>Url-Regex</param-name>
			<param-value>.+\.cache\..+</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EternalCacheResponseHeaderFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>